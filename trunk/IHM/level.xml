<?xml version="1.0" encoding="utf-8"?>
<glge>
    
    <mesh id="xline">
        <positions>
            -100000.0,0,0,
            100000.0,0,0
        </positions>
    </mesh>
    <mesh id="yline">
        <positions>
            0,-100000,0,
            0,100000,0
        </positions>
    </mesh>
    <mesh id="zline">
        <positions>
            0,0,-100000,
            0,0,100000
        </positions>
    </mesh>
    
    <material id="boxmaterial">
        <texture id="boxtexture" src="dae/images/wall.jpg"/>
        <material_layer texture="#boxtexture" mapinput="UV1" mapto="M_COLOR"/>
    </material>
    
    <material id="dark-gray" specular="0.00" color="#000" alpha="0.1" emit="1" />
	<material id="yellow" specular="0.00" color="#ffff00" emit="1"/>
    <material id="red" specular="0" color="#f00" emit="1"/>
    <material id="green" specular="0" color="#0f0" emit="1"/>
    <material id="blue" specular="0" color="#00f" emit="1"/>
    <material id="black" specular="0" color="#000" emit="1"/>
    <material id="cyan" specular="0" color="#00FFFF" alpha="0.3" emit="1"/>
    
    <camera id="mainCamera1" fov_y="10" rot_x="0.3" rot_y="0" rot_z="0" loc_x="-15" loc_y="-230" loc_z="850"/>/>

    <scene id="mainscene" camera="#mainCamera1" fog_type="FOG_NONE">
        
		<light id="*mainlight" loc_x="0" loc_y="15" loc_z="10" rot_x="-1.3"  attenuation_constant="0.5" type="L_SPOT" />
		<light id="*mainlight" loc_x="20" loc_y="-15" loc_z="5" rot_x="1.3"  attenuation_constant="0.5" type="L_SPOT" />
        
		<!--<collada id="xyzaxis" document="assets/dae/presets/XYZaxis.dae" scale="1" />-->
        
		<group id="graph">
            <object id="xaxis" draw_type="DRAW_LINES" line_width="2" mesh="#xline" material="#red"/>
            <object id="yaxis" draw_type="DRAW_LINES" line_width="2" mesh="#yline" material="#green"/>
            <object id="zaxis" draw_type="DRAW_LINES" line_width="2" mesh="#zline" material="#blue"/>
        </group>
        
    </scene>
</glge>